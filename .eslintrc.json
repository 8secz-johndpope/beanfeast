{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": ["airbnb-base", "plugin:node/recommended", "prettier"],
	"plugins": ["prettier"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": ["error"]
	}
}
